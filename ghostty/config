theme = "nord"

font-size = 16

# Start fullscreen
fullscreen = true

# Let Option key work as Alt for nvim
macos-option-as-alt = left

# Telescope
keybind = cmd+p=text:\x10
keybind = cmd+g=text:\x07
keybind = cmd+shift+p=unbind

# Split resizing (pass to nvim)
keybind = cmd+shift+j=unbind
keybind = cmd+shift+k=unbind
keybind = cmd+shift+0=text:\x1b[61;5u

# Panel/split navigation
keybind = cmd+shift+left=goto_split:left
keybind = cmd+shift+right=goto_split:right
keybind = cmd+shift+up=goto_split:top
keybind = cmd+shift+down=goto_split:bottom
