# Ghostty configuration managed by the setup repo.
# Copy to $HOME/Library/Application Support/com.mitchellh.ghostty/config on macOS.

# Make Option key send Alt/Meta to terminal (required for nvim keybindings)
macos-option-as-alt = true

# Map Cmd to Ctrl for common nvim shortcuts
keybind = "cmd+p=text:\\x10"
keybind = "cmd+g=text:\\x07"

keybind = "cmd+shift+left=goto_split:left"
keybind = "cmd+shift+right=goto_split:right"
keybind = "cmd+shift+up=goto_split:up"
keybind = "cmd+shift+down=goto_split:down"
keybind = "cmd+alt+shift+left=resize_split:left,5"
keybind = "cmd+alt+shift+right=resize_split:right,5"
keybind = "cmd+alt+shift+up=resize_split:up,5"
keybind = "cmd+alt+shift+down=resize_split:down,5"
