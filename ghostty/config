theme = "TokyoNight Storm"

# Let Option key work as Alt for nvim
macos-option-as-alt = left

# Telescope
keybind = cmd+p=text:\x10
keybind = cmd+g=text:\x07
keybind = cmd+shift+p=unbind

# Split resizing (pass to nvim)
keybind = cmd+shift+j=unbind
keybind = cmd+shift+k=unbind
keybind = cmd+shift+0=text:\x1b[61;5u
